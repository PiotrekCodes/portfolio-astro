---
export interface Props {
  title: string;
  url: string | undefined;
  description: string;
  img: string;
}

const { title, url, description, img } = Astro.props;
---

<div class="card">
  <div class="row">
    <div class="col">
      <h2><a class="blog-title" href={url}>{title}</a></h2>
      <p>{description}</p>
    </div>

    <img
      class="blog-img col-img"
      src={img}
      alt="family holding hands together"
    />
  </div>
</div>

<style>
  .blog-title:hover {
    border-bottom: 2px solid #b6eada;
  }
  .card {
    max-width: 400px;
    background-color: #f4f4f4;
    padding: 1rem;
    border: 2px solid black;
    box-shadow: black 4px 4px;
    text-align: center;
  }

  .row {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }

  .blog-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .col-img {
    margin-left: 10px;
  }

  @media (max-width: 768px) {
    .row {
      flex-direction: column;
    }

    .col-img {
      margin-left: 0;
      height: 200px;
      object-fit: contain;
    }
  }
</style>
